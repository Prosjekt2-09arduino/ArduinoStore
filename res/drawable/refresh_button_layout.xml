<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/onClick"
                android:endColor="@color/onClick"
                android:angle="270" />
            <corners
                android:radius="3dp" />
			<padding
                android:left="5dp"
                android:right="5dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/blue"
                android:startColor="@color/blue"
                android:angle="270" />
            <corners
                android:radius="3dp" />
			<padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/blue"
                android:startColor="@color/blue"
                android:angle="270" />
            <corners
                android:radius="3dp" />
			<padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

</selector>